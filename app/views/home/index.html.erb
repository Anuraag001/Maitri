    <div id="col2">


      <% Blog.all.each do |blog|%>
        <div class="card">
          <div class="card-body" style="padding:10px;">
            <div class="row">
              <div class="col_1">
                <a href="#">
                  <i class="bi bi-person-circle" style="font-size:50px;"></i>
                </a>
              </div>

              <div class="col_2" ,style="width:10%">
                <p><%= blog.name%></p>
                <p class="designation"><%= blog.designation%></p>
              </div>

              <hr>

              <div class="col"></div>
            </div>

            <div class="row">
              <p><%= blog.content%>
              </p>
            </div>

            <br>

            <div class="sfs">

                    <% blog.pictures.each do |file| %>
                    <%= image_tag file %>
                    <% end %>
              <br>
            </div>

            <hr>

            <div class="row">
              <div class="col">
                <%= form_with(model: blog) do |form| %>

                <% @blogs=blog.likes+1%>
                  <%= form.hidden_field :likes, value: @blogs %>
                  <h3 id="blog-last">
                    <a href="#"><%= button_tag( :class => "button_green") do %>
                      <i class="bi bi-hand-thumbs-up"></i>
                    <% end %>
                  </a><%= blog.likes%></h3>
              <%end%>
            </div>

            <div class="col">
              <%= form_with(model: blog) do |form| %>
              <% @blogs1=blog.dislikes+1%>
                <%= form.hidden_field :dislikes, value: @blogs1 %>
                <h3 id="blog-last">
                  <a href="#"><%= button_tag( :class => "button_green") do %>
                    <i class="bi bi-hand-thumbs-down"></i>
                  <% end %>
                </a><%= blog.dislikes%></h3>
            <%end%>
          </div>


          <div class="col">
            <div class="coll">
              <div id="blog-last">
                <a href="#" >
                  <i class="bi bi-chat-right-text" ></i>
                </a></div>
                <div id="comments-1"> Comment </div>
            </div>

          </div>


          <div class="col"><br>
            <div class="coll">
              <div id="blog-last">
                <a href="#">
                  <i class="bi bi-bookmark-check"></i>
                </a></div>
                <div id="comments">Bookmark</div>
            </div>
            </div>

