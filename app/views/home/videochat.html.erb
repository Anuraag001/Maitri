    <div id="col2">


      <% Confession.all.each do |confession|%>
        <div class="card" id="blog-card">
          <div class="card-body">
            <div class="row">
              <div class="col_1">
                <a href="#">
                  <i class="bi bi-person-circle" style="font-size:50px;"></i>
                </a>
              </div>

              <div class="col_2" ,style="width:10%">
                <p style="padding-top:5px">name</p>
                <p class="designation">designation</p>
              </div>

              <hr>

              <div class="col"></div>
            </div>

            <div class="row">
              <p><%= confession.title%>
              </p>
            </div>

            <br>

            <div class="sfs">
              <%if confession.avatars.attached? %>
                  <td><%confession.avatars.each do |file|%>
                      <%= image_tag file %>
                       <% end %></td>
                  <% else %>

                  <% end %>
              <br>
            </div>

            <hr>

            <div class="row">
              <div class="col">
                <%= form_with(model: confession) do |form| %>


                  <%= form.hidden_field :likes, value:(confession.likes || 0) + 1%>
                  <h3 id="blog-last">
                    <a href="#" style="text-decoration:none"><%= button_tag( :class => "button_green", style:"border:none;background-color:white") do %>
                      <i class="bi bi-hand-thumbs-up" style="background-color:white"></i>
                    <% end %>
                  </a><%= confession.likes%></h3>
              <%end%>
            </div>

            <div class="col">
              <%= form_with(model: confession) do |form| %>

                <%= form.hidden_field :dislikes,  value:(confession.dislikes || 0) + 1 %>
                <h3 id="blog-last">
                  <a href="#" style="text-decoration:none"><%= button_tag( :class => "button_green", style:"border:none;background-color:white") do %>
                    <i class="bi bi-hand-thumbs-down" style="background-color:white"></i>
                  <% end %>
                </a><%= confession.dislikes%></h3>
            <%end%>
          </div>


          <div class="col">
            <div class="coll">
              <div id="blog-last">
                <a href="#" >
                  <i class="bi bi-chat-right-text" ></i>
                </a></div>
