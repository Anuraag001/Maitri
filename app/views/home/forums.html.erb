<%= render 'partials/navbar' %>
<div class="container1">
<div class="col1">

</div>

<div class="col2">
  <div class="Anonymous-header">
    <h2 style="text-align:center; font-family:fantasy">MAITRI CHAT</h2>
  </div>
  <div class="message-box">
    <div class="message sent">
      <p style="padding-top:10px">Hello! How are you?</p>
    </div>
    <div class="message received">
      <p style="padding-top:10px">Hello! I am fine</p>
    </div>
