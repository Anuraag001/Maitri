
<%= stylesheet_link_tag 'index'%>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@500&display=swap" rel="stylesheet">


<div id="particles-js">
<div class="logincard" style="left:18% ; top:0%;  width:66%">
  <div class="one-div" style="font-family:Quicksand;">
    <%= image_tag 'logo.png',style:"width: 200px; height: 200px;margin:90px 0px 0px 10px" ,class:"rounded-circle bg-white shadow-1-strong d-flex align-items-center justify-content-center mb-4 mx-auto"%>
    <h2>"WELCOME TO MAITRI!"</h2>
    <ul>

      <li>Website made for chatting, blogging and video chat</li>
      <li>Website made to share your Experience,share your Life Stories,confess things and have fun</li>
      <li>Feel free to make an account you will definatly enjoy it</li>
      <li>Login and also Invite your friends. Have fun!!</li>

    </ul>
  </div>
  <div class="two-div">
    <p>Sign up</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-floating" style="font-size:150%;margin:20px 0px 20px 0px">
        <%= f.text_field :name,class:"form-control", id:"floatingPassword" ,placeholder:"Password",style:"opacity:70%"%>
        <%= f.label :name ,for:"floatingPassword",style:"opacity:70%"%>
      </div><br>

      <div class="input-group mb-3">
        <%= f.label :designation,'Designation',for:"inputGroupSelect01", class:"input-group-text"%>
        <%= f.select(:designation, ['student', 'faculty','external'], {:include_blank => 'Choose...'},{ :class => 'form-select' ,:id => "u-type",:required => true}) %>
      </div>

      <div class="form-floating mb-3" style="font-size:150%;margin:20px 0px 20px 0px">
        <%= f.email_field :email,placeholder:"name@example.com",class:"form-control" ,id:"floatingInput" ,style:"opacity:70%"%>
        <%= f.label :email ,for:"floatingInput"  ,style:"opacity:70%"%>
      </div><br>


      <div class="form-floating" style="font-size:150%;margin:20px 0px 20px 0px">
        <%= f.password_field :password, autocomplete: "current-password" ,class:"form-control", id:"floatingPassword" ,placeholder:"Password",style:"opacity:70%"%>
        <%= f.label :password ,for:"floatingPassword",style:"opacity:70%"%>
      </div>
<br>
      <div class="form-floating" style="font-size:150%;margin:20px 0px 20px 0px">

        <%= f.password_field :password_confirmation, autocomplete: "current-password" ,class:"form-control", id:"floatingPassword" ,placeholder:"Password",style:"opacity:70%"%>
        <%= f.label :password_confirmation ,for:"floatingPassword",style:"opacity:70%"%>
      </div>
      <br>
      <div class="input-group mb-3">
      <label class="input-group-text" for="inputGroupFile01">Profile Photo</label>
     <%= f.file_field :profile, class:"form-control" ,id:"inputGroupFile01"%>
    </div>
      <br>

      <div class="d-grid gap-2 col-6 " style="background-color:lightgoldenrodyellow">
        <%= f.submit "Sign up" ,:class=>'btn btn-warning',style:"width:200%"%>
      </div><br>
    <% end %>

      <div class="field" style="background-color:lightgoldenrodyellow">
      <a style="font-size:20px">Already have an account !</a>
      <!--<%= link_to "Log in", new_session_path(resource_name)%>-->
      <%= render "devise/shared/links" %>

    </div>
  </div>


<embed src="<%= audio_path 'singara.mp3'%>" loop="true" autostart="true" width="2"
         height="0">
<!-- particles.js container -->
<%= javascript_include_tag "particles" %>
<!-- particles.js lib (JavaScript CodePen settings): https://github.com/VincentGarreau/particles.js -->
<script type="text/javascript">

    particlesJS("particles-js", {
      "particles": {
        "number": {
          "value": 30,
          "density": {
            "enable": true,
            "value_area": 800
          }
        },
        "color": {
          "value": "#ffffff"
        },
        "shape": {
          "type": "image",
          "stroke": {
            "width": 2,
            "color": "#F3BCC8"
          },
          "polygon": {
            "nb_sides": 5
          },
          "image": {
            "src":'<%= asset_path 'heart2.png' %>',
            "width": 10,
            "height": 10
          },

        },
        "opacity": {
          "value": 0.5,
          "random": false,
          "anim": {
            "enable": false,
            "speed": 1,
            "opacity_min": 0.1,
            "sync": false
          }
        },
        "size": {
          "value": 50,
          "random": true,
          "anim": {
            "enable": false,
            "speed": 40,
            "size_min": 20,
            "sync": false
          }
        },
        "line_linked": {
          "enable": false,
          "distance": 150,
          "color": "#ffffff",
          "opacity": 0.0,
          "width": 0
        },
        "move": {
          "enable": true,
          "speed": 6,
          "direction": "top",
          "random": false,
          "straight": false,
          "out_mode": "out",
          "bounce": false,
          "attract": {
            "enable": false,
            "rotateX": 600,
            "rotateY": 1200
          }
        }
      },
      "interactivity": {
        "detect_on": "canvas",
        "events": {
          "onhover": {
            "enable": true,
            "mode": "repulse"
          },
          "onclick": {
            "enable": true,
            "mode": "push"
          },
          "resize": true
        },
        "modes": {
          "grab": {
            "distance": 140,
            "line_linked": {
              "opacity": 1
            }
          },
          "bubble": {
            "distance": 400,
            "size": 40,
            "duration": 2,
            "opacity": 8,
            "speed": 3
          },
          "repulse": {
            "distance": 100,
            "duration": 0.1
          },
          "push": {
            "particles_nb": 4
          },
          "remove": {
            "particles_nb": 2
          }
        }
      },
      "retina_detect": true
    });



    /* ---- stats.js config ---- */

    var count_particles, stats, update;
    stats = new Stats;
    stats.setMode(0);
    stats.domElement.style.position = 'absolute';
    stats.domElement.style.left = '0px';
    stats.domElement.style.top = '0px';
    document.body.appendChild(stats.domElement);
    count_particles = document.querySelector('.js-count-particles');
    update = function() {
      stats.begin();
      stats.end();
      if (window.pJSDom[0].pJS.particles && window.pJSDom[0].pJS.particles.array) {
        count_particles.innerText = window.pJSDom[0].pJS.particles.array.length;
      }
      requestAnimationFrame(update);
    };
    requestAnimationFrame(update);



</script>
